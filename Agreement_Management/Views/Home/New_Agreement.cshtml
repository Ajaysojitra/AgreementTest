@model Agreement_Management.Models.Ad_Product
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form class="form-horizontal" asp-action="New_Agreement">

                <div class="form-group">
                    <div class="form-group">
                        <label class="control-lable">Group</label>
                        <input asp-for="Group" class="form-control" type="text" />

                    </div>
                    <div class="form-group">
                        <label class="control-lable">Product</label>
                        <input asp-for="Product" class="form-control" type="text" />

                    </div>
                    <div class="form-group">
                        <label class="control-lable">Effective Date</label>
                        <input asp-for="Effective_Date" class="form-control" type="date" />

                    </div>
                    <div class="form-group">
                        <label class="control-lable">Expiration Date</label>
                        <input asp-for="Expiration_Date" class="form-control" type="date" />

                    </div>
                    <div class="form-group">
                        <label class="control-lable">Price</label>
                        <input asp-for="Price" class="form-control" type="text" />

                    </div>
                    <div class="form-group">
                        <label class="control-lable">Active</label>
                        <input asp-for="Active"  type="checkbox" />

                    </div>
                    <div class="form-group">
                    <input type="submit" value="Save" />
                    <input type="submit" value="Close" />
                </div>
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>

    </div>

</div>